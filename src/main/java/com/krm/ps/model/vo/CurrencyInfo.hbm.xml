<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.krm.ps.model.vo.CurrencyInfo"
        table="code_rep_currency"
    >

        <id
            name="pkid"
            column="pkid"
            type="java.lang.Long"
        >
            <generator class="native">
                <param name="sequence">code_rep_currency_seq</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-CurrencyInfo.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="code"
            type="java.lang.String"
            update="true"
            insert="true"
            column="code"
        />

        <property
            name="short_name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="short_name"
        />

        <property
            name="full_name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="full_name"
        />

        <property
            name="unit_name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="unit_name"
        />

        <property
            name="status"
            type="java.lang.String"
            update="true"
            insert="true"
            column="status"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />

        <property
            name="modify_date"
            type="java.lang.String"
            update="true"
            insert="true"
            column="modify_date"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-CurrencyInfo.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
